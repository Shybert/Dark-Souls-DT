{
  "name": "dsdt",
  "version": "0.1.0",
  "description": "A death counter and timer application & overlay built for Dark Souls.",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron-webpack dev",
    "lint": "wotan",
    "test": "jest"
  },
  "author": "Shybert",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shybert/Dark-Souls-DT"
  },
  "license": "GPL-3.0",
  "devDependencies": {
    "@fimbul/valtyr": "^0.17.0",
    "@fimbul/ve": "^0.17.0",
    "@fimbul/wotan": "^0.17.0",
    "@types/chart.js": "^2.7.48",
    "@types/electron-store": "^1.3.0",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.11",
    "@types/lodash": "^4.14.119",
    "@types/write-file-atomic": "^2.1.1",
    "@vue/test-utils": "^1.0.0-beta.28",
    "electron": "^3.0.13",
    "electron-webpack": "^2.6.1",
    "electron-webpack-ts": "^3.1.0",
    "electron-webpack-vue": "^2.2.2",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2",
    "typescript-tslint-plugin": "^0.2.1",
    "vue-class-component": "^6.3.2",
    "vue-jest": "^3.0.2",
    "vue-property-decorator": "^7.2.0",
    "webpack": "^4.28.3"
  },
  "dependencies": {
    "chart.js": "^2.7.3",
    "electron-store": "^2.0.0",
    "lodash": "^4.17.11",
    "vue": "^2.5.21",
    "vue-chartjs": "github:Shybert/vue-chartjs",
    "vue-router": "^3.0.2",
    "vuex": "^3.0.1",
    "vuex-smart-module": "^0.2.2",
    "write-file-atomic": "^2.3.0"
  },
  "jest": {
    "globals": {
      "vue-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node",
      "vue"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,vue}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text-summary"
    ]
  }
}
